<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>LoginFormServlet</servlet-name>
        <servlet-class>web.servlet.LoginFormServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginFormServlet</servlet-name>
        <url-pattern>/loginForm</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>web.servlet.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProductFormServlet</servlet-name>
        <servlet-class>web.servlet.ProductFormServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>web.servlet.MainServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ProductFormServlet</servlet-name>
        <url-pattern>/product</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ShopCartServlet</servlet-name>
        <servlet-class>web.servlet.shopCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShopCartServlet</servlet-name>
        <url-pattern>/shopCart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>checkoutServlet</servlet-name>
        <servlet-class>web.servlet.checkoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>checkoutServlet</servlet-name>
        <url-pattern>/checkout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>searchOrderServlet</servlet-name>
        <servlet-class>web.servlet.searchOrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>searchOrderServlet</servlet-name>
        <url-pattern>/searchOrder</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ValidataCode</servlet-name>
        <servlet-class>web.servlet.ValidataCode</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ValidataCode</servlet-name>
        <url-pattern>/code</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegistServlet</servlet-name>
        <servlet-class>web.servlet.RegistServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegistServlet</servlet-name>
        <url-pattern>/regist</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>FindPassword</servlet-name>
        <servlet-class>web.servlet.FindServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>FindPassword</servlet-name>
        <url-pattern>/find</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>changeGoodsCountsServlet</servlet-name>
        <servlet-class>web.servlet.changeGoodsCountsServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>changeGoodsCountsServlet</servlet-name>
        <url-pattern>/changeGoodsCounts</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>removeGoodsServlet</servlet-name>
        <servlet-class>web.servlet.removeGoodsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>removeGoodsServlet</servlet-name>
        <url-pattern>/removeGoods</url-pattern>
    </servlet-mapping>
</web-app>